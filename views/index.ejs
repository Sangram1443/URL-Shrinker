<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url Shortner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container my-5">
        <h1>URL Shrinker</h1>
        <form action="/urlShortner" method="post" class="row g-3">
            <!-- URL Input Field -->
            <div class="col-md-10">
                <!-- <label for="fullUrl" class="form-label"></label> -->
                <input type="text" name="fullUrl" id="fullUrl" class="form-control" placeholder="Enter the URL"
                    required>
            </div>
            <!-- Submit Button -->
            <div class="col-md-2 align-self-end">
                <button type="submit" class="btn btn-success w-100">Shrink</button>
            </div>
        </form>

        <!-- Table to Display URLs -->
        <div class="mt-5">
            <h3>Generated URLs</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Full URL</th>
                        <th>Short URL</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (urls && urls.length> 0) { %>
                        <% urls.forEach((url, index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td><a href="<%= url.fullUrl %>" target="_blank">
                                        <%= url.fullUrl %>
                                    </a></td>
                                <td><a href="/<%= url.shortUrl %>" target="_blank">
                                        <%= url.shortUrl %>
                                    </a></td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3" class="text-center">No URLs created yet.</td>
                                    </tr>
                                    <% } %>
                </tbody>

            </table>
        </div>
    </div>
</body>

</html>